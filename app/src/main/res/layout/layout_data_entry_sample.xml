<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kds_background_default"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kds_section_background"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        >

        <TextView
            android:layout_margin="@dimen/margin"
            style="@style/kds_instruction"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_short"
             />

        <EditText
            android:layout_margin="@dimen/margin"
            android:id="@+id/editText"
            style="@style/kds_textInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/lorem_short"
            android:ems="10"
            android:hint="Project Title"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="54dp" />

        <EditText
            android:layout_margin="@dimen/margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            style="@style/kds_textInput"
            tools:text="@string/lorem_long"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>