<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Section Styles -->
    <style name="kds_section">
        <item name="android:background">@drawable/kds_section_background</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:shadowColor">@color/kds_dark</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="kds_section_attention">
        <item name="android:background">@drawable/kds_attention_background</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:shadowColor">@color/kds_dark</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <!-- Text Styles -->
    <style name="kds_mainTitle" >
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="kds_header">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="kds_instruction" >
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/kds_green</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="kds_text">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <!-- Text input styles -->
    <style name="kds_textInput" >
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textColorHint">@color/kds_green</item>
        <item name="android:colorActivatedHighlight">@color/kds_background_light</item>
        <item name="android:backgroundTint">@color/kds_blue</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <!-- Button Styles -->
    <style name="kds_default_button">
        <item name="android:background">@drawable/kds_default_button</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:padding">@dimen/margin</item>

    </style>

    <style name="kds_cancel_button">
        <item name="android:background">@drawable/kds_dismissive_button</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="kds_ok_button" >
        <item name="android:background">@drawable/kds_affirmative_button</item>
        <item name="android:textColor">@color/kds_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <!-- Style for an item you'd click on something like a recyclerview -->
    <style name="kds_clickable_item" >
        <item name="background">@drawable/kds_clickable_item</item>
        <item name="android:layout_margin">@dimen/listMargin</item>
    </style>

</resources>
